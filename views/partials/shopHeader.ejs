<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Think Thankz CCTV</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/user-assets/imgs/theme/favicon.svg">

    <!-- Evara Theme CSS -->
    <link rel="stylesheet" href="/user-assets/css/maind134.css">

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- REQUIRED JS (order matters) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- SVGInject (MANDATORY for Evara icons) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/svg-injector/1.1.3/svg-injector.min.js"></script>

    <!-- FORCE OVERRIDES -->
    <style>
        .header-middle {
            padding: 15px 0;
            display: block !important;
        }

        .header-wrap {
            display: flex !important;
            align-items: center;
            justify-content: space-between;
        }

 

        .search-style-2 input {
            width: 260px;
        }

        .header-action {
            display: flex !important;
            align-items: center;
            gap: 18px;
        }

        /* FORCE ICON VISIBILITY (Evara hides them) */
        .header-action img {
            display: inline-block !important;
            visibility: visible !important;
            opacity: 1 !important;
            width: 24px;
            height: auto;
            cursor: pointer;
        }

        /* FIX DROPDOWN VISIBILITY */
        .dropdown-menu {
            display: none;
        }

        .dropdown.show .dropdown-menu {
            display: block;
            opacity: 1;
            visibility: visible;
        }
    </style>
</head>

<body>

<div class="header-middle">
    <div class="container">
        <div class="header-wrap">

            <!-- LOGO -->
              <div class="logo">
                    <a href="/">
                        <img src="/user-assets/imgs/theme/ThinkThankz-logo/cover.png"
                             alt="ThinkThankz" style="width:260px;">
                    </a>
                </div>

            <!-- SEARCH -->
            <div class="search-style-2">
                <form action="/search">
                    <input type="text" name="search" class="form-control"
                           placeholder="Search for items...">
                </form>
            </div>

            <!-- ACTIONS -->
            <div class="header-action">

                <!-- Wishlist -->
          <a href="/wishlist" class="position-relative">
    <img src="/user-assets/imgs/theme/icons/icon-heart.svg" alt="Wishlist">
    <% if (wishlistCount > 0) { %>
        <span class="badge badge-danger cart-badge"><%= wishlistCount %></span>
    <% } %>
</a>


                <!-- Cart -->
               <a href="/cart" class="position-relative">
    <img src="/user-assets/imgs/theme/icons/icon-cart.svg" alt="Cart">
    <% if (cartCount > 0) { %>
        <span class="badge badge-success cart-badge"><%= cartCount %></span>
    <% } %>
</a>


                <!-- User -->
                <% if (locals.user) { %>
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img class="svgInject"
                             src="/user-assets/imgs/theme/icons/user-profile.svg"
                             alt="User">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="/profile">Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-danger" href="/logout">Logout</a>
                    </div>
                </div>
                <% } else { %>
                    <a href="/login">Sign Up</a>
                <% } %>

            </div>
        </div>
    </div>
</div>

<!-- INIT SVG INJECT -->
<script>
    SVGInjector(document.querySelectorAll("img.svgInject"));
</script>

</body>
</html>
