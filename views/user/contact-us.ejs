<%- include("../partials/header") %>

<section id="contact" class="container py-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold">Contact Think Thanks</h1>
        <p class="text-secondary">We're here to help — anytime.</p>
    </div>

    <div class="row">
        <!-- Contact Info -->
        <div class="col-md-6 mb-4">
            <h3>Customer Support</h3>
            <p>
                If you have any questions about your orders, payments, or returns,
                feel free to reach out.
            </p>

            <ul class="list-unstyled mt-4">
                <li><strong>Email:</strong> support@thinkthanks.shop</li>
                <li><strong>Phone:</strong> +91 98765 43210</li>
                <li><strong>Address:</strong> Coimbatore, Tamil Nadu</li>
            </ul>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6">
            <h3>Send us a Message</h3>

            <form id="contactForm" class="mt-3">
                <div class="mb-3">
                    <label class="form-label">Your Name</label>
                    <input id="name" type="text" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Your Email</label>
                    <input id="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <input id="subject" type="text" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea id="message" class="form-control" rows="5" required></textarea>
                </div>

                <button id="sendBtn" type="submit" class="btn btn-dark w-100">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</section>

<!-- EmailJS -->
<script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>

<script>
    // SAME AS React setup
    emailjs.init("lU7gEWPrwUykl1MpY"); // ✅ Public Key

    document.getElementById("contactForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const btn = document.getElementById("sendBtn");
        btn.disabled = true;
        btn.innerText = "Sending...";

        const templateParams = {
            from_name: document.getElementById("name").value,
            from_email: document.getElementById("email").value,
            subject: document.getElementById("subject").value,
            message: document.getElementById("message").value,
            reply_to: document.getElementById("email").value,
            to_name: "Shijay"
        };

        try {
            await emailjs.send(
                "service_arv22cm",   // ✅ Service ID
                "template_09vg5ar",  // ✅ Template ID
                templateParams
            );

            Swal.fire({
                icon: "success",
                title: "Message Sent!",
                text: "Thank you for your message. We'll get back to you soon!",
                timer: 2000,
                showConfirmButton: false
            });

            document.getElementById("contactForm").reset();
        } catch (error) {
            console.error("EmailJS Error:", error);

            Swal.fire({
                icon: "error",
                title: "❌ Error",
                text: "Failed to send message. Please try again later."
            });
        } finally {
            btn.disabled = false;
            btn.innerText = "Send Message";
        }
    });
</script>

