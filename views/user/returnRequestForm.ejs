<%- include("../partials/header") %>

<!-- SweetAlert2 & Axios -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<style>
/* Center container */
.return-form-container {
    max-width: 650px;
    margin: 50px auto;
    padding: 30px;
    border-radius: 12px;
    background: #fff;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    font-family: 'Segoe UI', sans-serif;
}

/* Titles */
.return-form-container h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #333;
    font-weight: 700;
}
.return-form-container h3 {
    margin-top: 25px;
    margin-bottom: 15px;
    color: #4CAF50;
    font-weight: 600;
}

/* User & Product info */
.return-form-container p {
    margin: 5px 0;
    color: #555;
}

/* Inputs */
.return-form-container input[type="text"],
.return-form-container input[type="number"],
.return-form-container textarea {
    width: 100%;
    padding: 12px 15px;
    margin: 8px 0 20px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 14px;
    transition: border 0.2s ease;
}

.return-form-container input:focus,
.return-form-container textarea:focus {
    border-color: #4CAF50;
    outline: none;
}

/* Button */
.return-form-container button {
    background-color: #4CAF50;
    color: #fff;
    font-weight: 600;
    padding: 14px;
    border: none;
    border-radius: 8px;
    width: 100%;
    cursor: pointer;
    font-size: 16px;
    transition: 0.3s ease;
}

.return-form-container button:hover {
    background-color: #45a049;
}

/* Responsive */
@media (max-width: 576px) {
    .return-form-container {
        padding: 20px;
        margin: 20px;
    }
}
</style>

<div class="return-form-container">
    <h2>Return Request Form</h2>

    <!-- User Info -->
    <div>
        <p><strong>User Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
    </div>

    <!-- Product Info -->
    <h3>Product Details</h3>
    <p><strong>Product Name:</strong> <%= product.name %></p>
    <p><strong>Price:</strong> â‚¹<%= product.price %></p>
    <p><strong>Quantity:</strong> <%= product.quantity %></p>

    <!-- Form -->
    <form id="returnForm">
        <input type="hidden" name="userId" value="<%= user._id %>">
        <input type="hidden" name="orderId" value="<%= order._id %>">
        <input type="hidden" name="productId" value="<%= product._id %>">

        <label for="reason">Reason for Return</label>
        <textarea id="reason" name="reason" required placeholder="Enter your reason here..."></textarea>

        <label for="quantity">Quantity to Return</label>
        <input type="number" id="quantity" name="quantity" min="1" max="<%= product.quantity %>" value="1" required>

        <button type="submit">Submit Return Request</button>
    </form>
</div>

<script>
// Form submission with SweetAlert confirmation
document.getElementById('returnForm').addEventListener('submit', async function(event) {
    event.preventDefault();

    const form = event.target;
    const formData = new FormData(form);
    const data = {};
    formData.forEach((value, key) => { data[key] = value; });

    // SweetAlert confirmation
    const result = await Swal.fire({
        title: 'Confirm Return',
        html: `Are you sure you want to return <strong>${data.quantity}</strong> item(s) of <strong>${"<%= product.name %>"}</strong>?`,
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Yes, submit',
        cancelButtonText: 'Cancel'
    });

    if (result.isConfirmed) {
        // Send request via Axios
        axios.post('/raiseReturnRequest', data)
            .then(response => {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: response.data.message
                }).then(() => {
                    window.location.href = '/profile';
                });
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response?.data?.message || 'Something went wrong!'
                });
            });
    }
});
</script>
